<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.blankj.utilcode.util.ActivityUtils" />

        <import type="com.derelicthut.basecode.mvvmkotlin.nav.TestNavActivity" />

        <variable
            name="secondVm"
            type="com.derelicthut.basecode.mvvmkotlin.vm.SecondVm" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="@{v->secondVm.startTestNavActivity()}"
            android:text="NavActivity"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</layout>